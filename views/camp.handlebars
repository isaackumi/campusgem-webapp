    <style>
        :root {
            --primary-color: #c92f2f;
            --secondary-color: #0d1d1b;
            --background-light: #f4f4f4;
            --text-light: #ffffff;
            --bg-color: #1a1a1b;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--background-light);
            color: var(--bg-color);
        }

        .header-content {
            color: var(--text-light)
        }

        .p-content {
            color: var(--text-light)
        }

        .camp-container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .breadcrumb {
            background: none;
            padding: 4px 0;
        }

        .breadcrumb-inner {
            display: flex;
            align-items: center;
        }

        .breadcrumb-inner a {
            color: var(--primary-color);
            text-decoration: none;
            margin-right: 10px;
        }

        .breadcrumb-inner span {
            color: #888;
        }

        .hero-section {
            display: flex;
            align-items: center;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 30px;
        }

        .hero-content {
            flex: 1;
            padding: 50px;
        }

        .hero-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .hero-image img {
            max-width: 100%;
            height: auto;
        }

        .countdown {
            display: flex;
            justify-content: space-between;
            background: rgba(255,255,255,0.2);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .countdown-item {
            text-align: center;
        }

        .countdown-item .number {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .register-btn {
            display: inline-block;
            background: white;
            color: var(--primary-color);
            padding: 15px 30px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: bold;
            transition: transform 0.3s ease;
        }

        .register-btn:hover {
            transform: scale(1.05);
        }

        @media screen and (max-width: 768px) {
            .hero-section {
                flex-direction: column;
            }

            .hero-content, .hero-image {
                flex: none;
                width: 100%;
                padding: 20px;
            }

            .countdown {
                flex-wrap: wrap;
            }

            .countdown-item {
                flex-basis: 25%;
                margin-bottom: 10px;
            }

            .countdown-item .number {
                font-size: 2rem;
            }
        }
    </style>


    <script>
        function updateCountdown() {
            const eventStartDate = new Date('December 26, 2024 00:00:00').getTime();
            const eventEndDate = new Date('December 31, 2024 23:59:59').getTime();
            const campExpireDate = new Date('January 1, 2025 00:00:00').getTime();
            const now = new Date().getTime();

            const countdownElement = document.querySelector('.countdown');
            const registerBtn = document.querySelector('.register-btn');
            const heroImage = document.querySelector('.hero-image');
            const heroContent = document.querySelector('.hero-content h1');
            const heroSubtitle = document.querySelector('.hero-content p');

            // If camp is ongoing (26th Dec - 31st Dec)
            if (now >= eventStartDate && now <= eventEndDate) {
                countdownElement.innerHTML = '<p style="width:100%; text-align:center; font-size:1.2rem;">Camp Meeting 2024 Happening Live @ Winneba Sec School</p>';
                registerBtn.disabled = true;
                registerBtn.style.opacity = '0.5';
                registerBtn.style.cursor = 'not-allowed';
                registerBtn.removeAttribute('href');
            }
            // If camp has expired (after 1st Jan 2025)
            else if (now >= campExpireDate) {
                countdownElement.style.display = 'none';
                registerBtn.style.display = 'none';
                heroImage.style.display = 'none';
                heroContent.textContent = 'Camp Meeting 2024 Concluded';
                heroSubtitle.textContent = 'Looking Forward to Camp Meeting 2025! Start Preparing Now.';
            }
            // Regular countdown before event
            else {
                const distance = eventStartDate - now;

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('days').innerText = days < 10 ? '0' + days : days;
                document.getElementById('hours').innerText = hours < 10 ? '0' + hours : hours;
                document.getElementById('minutes').innerText = minutes < 10 ? '0' + minutes : minutes;
                document.getElementById('seconds').innerText = seconds < 10 ? '0' + seconds : seconds;
            }
        }

        updateCountdown();
        setInterval(updateCountdown, 1000);
    </script>