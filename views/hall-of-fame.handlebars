{{> header}}

<div class="hall-of-fame-container">
    <div class="inspiration-banner">
        <h1 class="main-header">Campus Gem Hall of Fame</h1>
        <p class="sub-header">
            Celebrating the extraordinary journeys of graduates who transform dreams into remarkable achievements.
        </p>
    </div>

    <div class="graduate-grid">
        {{#each images}}
        <div class="graduate-card">
            <div class="image-container">
                <img src="{{this}}" alt="Graduate Photo" loading="lazy">
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{> footer}}

<style>
    :root {
        --primary-color: #c92f2f;
        --secondary-color: #000000;
        --bg-color: #1a1a1b;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Inter', sans-serif;
    }

    .hall-of-fame-container {
        max-width: 1600px;
        margin: 0 auto;
        padding: 2rem;
    }

    .inspiration-banner {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        text-align: center;
        padding: 3rem 1rem;
        margin-bottom: 2rem;
        border-radius: 15px;
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .main-header{
        color: white
    }

    .sub-header{
        color: white
    }

    .graduate-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2.5rem;
    }

    .graduate-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 25px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        transform-origin: center;
    }

    .graduate-card:hover {
        transform: scale(1.05);
        box-shadow: 0 20px 35px rgba(0,0,0,0.12);
    }

    .image-container {
        width: 100%;
        height: 400px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .graduate-card img {
        width: 100%;
        height: auto;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    @media (max-width: 768px) {
        .graduate-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .image-container {
            height: 300px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const graduateCards = document.querySelectorAll('.graduate-card');
        
        graduateCards.forEach(card => {
            const img = card.querySelector('img');
            
            card.addEventListener('mouseenter', () => {
                img.style.transform = 'scale(1.1)';
            });
            
            card.addEventListener('mouseleave', () => {
                img.style.transform = 'scale(1)';
            });
        });
    });
</script>