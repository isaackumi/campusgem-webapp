    <style>
        .social-links-area {
            padding: 40px 0;
            background:white
        }

        .social-links-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 30px;
            flex-direction: row; /* Changed to row for horizontal layout */
            padding: 20px;
            max-width: 100%;
            overflow-x: auto; /* Allow horizontal scrolling if needed */
        }

        .social-link-item {
            display: flex;
            align-items: center;
            padding: 15px 25px;
            border-radius: 12px;
            text-decoration: none;
            color: white;
            width: 280px; /* Fixed width for consistent sizing */
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            flex-shrink: 0; /* Prevent items from shrinking */
        }

        .social-link-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }

        .social-link-item:hover::before {
            transform: translateX(0);
        }

        .whatsapp-gradient {
            background: linear-gradient(45deg, #25D366, #128C7E);
            box-shadow: 0 4px 15px rgba(37, 211, 102, 0.2);
        }

        .telegram-gradient {
            background: linear-gradient(45deg, #0088cc, #0056a3);
            box-shadow: 0 4px 15px rgba(0, 136, 204, 0.2);
        }

        .icon-wrapper {
            background: rgba(255, 255, 255, 0.2);
            padding: 10px;
            border-radius: 50%;
            margin-right: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .social-icon {
            width: 24px;
            height: 24px;
            color: white;
        }

        .link-content {
            flex: 1;
        }

        .link-content h5 {
            margin: 0;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
        }

        .link-content span {
            font-size: 0.9rem;
            opacity: 0.9;
            display: block;
            margin-top: 2px;
            transition: transform 0.3s ease;
        }

        .social-link-item:hover .link-content span {
            transform: translateX(5px);
        }

        .social-link-item:hover {
            transform: translateY(-3px);
        }

        @media (max-width: 992px) {
            .social-links-container {
                flex-wrap: nowrap;
                justify-content: flex-start;
                padding: 20px 0;
            }
            
            .social-link-item {
                width: 260px;
            }
        }

        @media (max-width: 768px) {
            .social-links-container {
                padding: 20px 15px;
            }
        }
    </style>

